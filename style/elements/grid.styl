.row
    grid-system(cols = 12, gutter = 20px, child = '.col', offset = '.off', all-columns = true, separate = '-', breakpoint = mobile-breakpoint)

.col-1, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9, .col-10, .col-11, .col-12

    &.left
        float left

    &.right
        float right

    @media (max-width: mobile-breakpoint)

        &.left, &.right
            float none