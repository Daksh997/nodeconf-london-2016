row-color(base-color = #999)
    border-left 10px solid base-color

    .segment
        color base-color
        font-weight bold

#schedule
    section-color(#262c47)

    table
        border-radius()
        flat-shadow()
        width 100%
        max-width 600px
        margin auto
        color color-black
        text-align center
        border-collapse collapse
        border-spacing 0
        overflow hidden

        thead
            background lighten(color-blue, 20)
            color color-white
            text-transform uppercase
            font-size 12px

        td, th
            padding 15px
            border 0
            margin 0

        tbody
            background color-white

            tr
                transition background .2s

                &:nth-child(odd)
                    background-color #f5f5f5

                &:hover
                    background mix(color-brand, darken(color-white, 5), 10%)

                &.start-it
                    row-color(color-start-it)

                &.build-it
                    row-color(color-build-it)

                &.ship-it
                    row-color(color-ship-it)

                &.use-it
                    row-color(color-use-it)

            .segment
                color #666

            .start, .end
                font-style italic
                opacity .5

    @media (max-width: mobile-breakpoint)

        table
            max-width 100%

            td, th
                font-size 11px
                padding-left 5px
                padding-right @padding-left