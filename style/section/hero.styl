switch-transition-time = 1s

#hero
    background-color color-sky
    position relative
    overflow hidden
    transition background switch-transition-time, color switch-transition-time

    .scroll-pointer
        border-radius()
        padding 10px 20px
        position absolute
        bottom 20px
        left 50%
        transform translateX(-50%)
        color color-blue
        animation scroll-pointer-float .7s infinite alternate
        opacity 0
        transition opacity 3s
        background color-blue
        color color-white
        font-size 12px
        
        &.show
            opacity 1

        &:before
            tooltip-tail(color-blue, 'bottom', 8px)
            content ''
            position absolute
            left 50%

        &:after
            content 'Keep Scrolling'

    a.button
        transition background switch-transition-time, color switch-transition-time

    // Stars
    &:before
        absolute-cover()
        content ''
        background-image url(assets-dir + '/hero/stars.svg')
        background-repeat no-repeat
        background-position center center
        transition opacity switch-transition-time
        pointer-events none
        opacity 0

    h1
        font-weight 900
        margin-bottom 5px

    h1, h2
        color desaturate(color-blue-light, 60%)
        transition color switch-transition-time

    h2
        margin-bottom 30px

    .logo
        display block
        max-width 350px
        margin auto
        margin-bottom 15px
        position relative

        &:focus
            outline 0

        img
            width 100%
            position relative
            transition opacity switch-transition-time

            &.day
                top 2px

            &.night
                absolute-center()
                opacity 0

        // Sun
        &:before
            absolute-center()
            bg-image('hero/sun', contain, center center, no-repeat)
            pointer-events none
            content ''
            width 180%
            padding-bottom @width
            transition transform switch-transition-time, opacity switch-transition-time
            transform-origin 300% 300%

        &:hover:before
            transform scale(1.2)

    .content
        position relative
        z-index 1

    .cloud
        position absolute
        bottom 0
        left -100%
        pointer-events none

        // Day and Night cloud assets
        &:before, &:after
            absolute-cover()
            background-size contain
            background-position center bottom
            background-repeat no-repeat
            content ''
            transition opacity switch-transition-time

        &:after
            opacity 0

        &.cloud-01
            width 50%
            padding-bottom 25%
            animation cloud 50s -10s infinite linear

            &:before
                background-image url(assets-dir + '/hero/cloud-03.svg')

            &:after
                background-image url(assets-dir + '/hero/cloud-03-night.svg')

        &.cloud-02
            width 40%
            padding-bottom 20%
            animation cloud 40s -30s infinite linear

            &:before
                background-image url(assets-dir + '/hero/cloud-02.svg')

            &:after
                background-image url(assets-dir + '/hero/cloud-02-night.svg')

        &.cloud-03
            width 30%
            padding-bottom 15%
            animation cloud 45s -5s infinite line

            &:before
                background-image url(assets-dir + '/hero/cloud-01.svg')

            &:after
                background-image url(assets-dir + '/hero/cloud-01-night.svg')

body.night #hero
        background darken(color-blue, 10)
        
        // Stars
        &:before
            opacity 1

        &, h1, h2
            color color-white

        a.button
            button-color(color-green-light, rgba(color-blue, .6))

        .logo
            
            img

            &.day
                opacity 0

                &.night
                    opacity 1

            &:before
                opacity 0
                transform scale(.8)

        .cloud

            &:before
                opacity 0

            &:after
                opacity 1

    @media (max-width: mobile-breakpoint)

        .logo
            width 70%
            margin-bottom 50px