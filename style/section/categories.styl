category-list-color(base-color)

    h3
        color base-color
        opacity 1

section#categories
    section-color(#1a3836)

    .illustration
        max-width 100px
        margin auto
        display block

    ul.categories-list
        debullet()
        margin-top 50px

        h3
            text-align center
            margin-top 30px

        p
          text-align left

        li.category-start-it
            category-list-color(color-start-it)

        li.category-build-it
            category-list-color(color-build-it)

        li.category-ship-it
            category-list-color(color-ship-it)

        li.category-use-it
            category-list-color(color-use-it)

    h2
        text-align center