section#getting-there
    section-color(#063348)

    .copy
        margin-top 20px

    a.map
        bg-image('/maps/venue', contain, center center, no-repeat)
        display block
        width 100%
        padding-bottom 100%
        margin 0 auto

        @media (max-width: mobile-breakpoint)
            margin-top 30px

    h4
        margin-bottom 5px

    .address
        border-radius(5px)
        padding 20px
        background rgba(0, 0, 0, .2)
        max-width 300px
        text-align center
        position relative
        margin 30px auto 20px

    @media (max-width: mobile-breakpoint)

        .copy
            margin-top 0